{
  "userId": "string",
  "communicationStyle": {
    "tone": "casual|formal|friendly|professional|witty|empathetic",
    "verbosity": "concise|moderate|detailed|comprehensive",
    "language": "en|es|fr|de|ja|zh|...",
    "includeExplanations": "boolean"
  },
  "expertise": {
    "domains": ["array of strings"],
    "skillLevel": {
      "domainName": "beginner|intermediate|advanced|expert|number (0-10)"
    },
    "interests": ["array of strings"]
  },
  "preferences": {
    "prioritizeSpeed": "boolean",
    "adaptivePersonalization": "boolean",
    "contextualAwareness": "boolean",
    "privacyLevel": "minimal|standard|enhanced"
  },
  "context": {
    "recentInteractions": [
      {
        "content": "string",
        "timestamp": "ISO 8601 string",
        "category": "string",
        "service": "string"
      }
    ],
    "recentQueries": [
      {
        "query": "string",
        "type": "string",
        "timestamp": "ISO 8601 string"
      }
    ],
    "interactionHistory": {
      "queryTypes": {
        "factual": "number",
        "creative": "number",
        "code": "number",
        "analytical": "number",
        "business": "number",
        "educational": "number"
      },
      "lastModelUsed": "string",
      "lastInteraction": "ISO 8601 string"
    },
    "savedItems": ["array of saved content"],
    "learningPatterns": {
      "commonTopics": [
        {
          "topic": "string",
          "frequency": "number",
          "lastSeen": "ISO 8601 string"
        }
      ],
      "timePatterns": {},
      "contextualPreferences": {}
    },
    "modules": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["list", "planner", "calendar", "interest", "tracker", "goal"]
            },
            "data": {
              "type": ["object", "array"]
            },
            "metadata": {
              "type": "object",
              "properties": {
                "createdAt": {"type": "string", "format": "date-time"},
                "lastUpdated": {"type": "string", "format": "date-time"},
                "lastAccessed": {"type": "string", "format": "date-time"},
                "priority": {"type": "number", "minimum": 1, "maximum": 10},
                "tags": {"type": "array", "items": {"type": "string"}},
                "archived": {"type": "boolean"}
              },
              "required": ["createdAt", "lastUpdated"]
            }
          },
          "required": ["type", "data", "metadata"]
        }
      },
      "additionalProperties": false
    }
  },
  "serviceSpecific": {
    "gptoggle": {
      "enabled": "boolean",
      "configuration": {
        "accessLevel": "basic|premium|enterprise"
      },
      "preferences": {}
    }
  },
  "metadata": {
    "createdAt": "ISO 8601 string",
    "lastUpdated": "ISO 8601 string",
    "version": "2.0.0",
    "services": ["array of strings"],
    "adaptiveEnabled": "boolean"
  }
}